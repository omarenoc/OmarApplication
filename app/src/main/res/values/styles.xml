<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Header">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?attr/textAppearanceOverline</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="DetailLabel">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline6</item>
    </style>

    <style name="DetailText">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline5</item>
    </style>
    
    <style name="button">
        <item name="backgroundTint">@color/secondaryDarkColor</item>
    </style>
</resources>